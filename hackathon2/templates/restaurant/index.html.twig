{% extends 'base.html.twig' %}

{% block title %}Hello RestaurantController!{% endblock %}

{% block body %}
    <div class="container-fluid bodyResto">
    <div class="containe-fluid info-Resto shadow">
        <div class="container d-flex justify-content-lg-around">
            <div class="row pt-5 pb-5">
                <div class="col-12 col-md-6 m-5">
                    <h1>{{ restaurant.name }} </h1>
                    <img src="{{ restaurant.srcImg }}" alt="Logo du restaurant">
                    <div>
                        {%  for tag in restaurant.tagId %}
                        <span class="badge badge-pill badge-info">{{ tag.name }}</span>
                        {% endfor %}
                    </div>
                    <p>{{ restaurant.description }}</p>
                </div>
                <div class="col-12 col-md-4"><img src="https://via.placeholder.com/350" alt="Image restaurant"></div>
                <img class="positionBonhomme" src="https://image.noelshack.com/fichiers/2019/26/4/1561650226-cuisine.png" alt="">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row m-5" >
            <h1>Les restaurants </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="container">
        <div class="row">
        {% for resto in allResto %}
        <div class="card mb-3 ml-1 mr-3 d-flex shadow" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4 ml-3 mr-3 mt-3 align-self-center">
                    <img src="{{ resto.logo }}" class="card-img" alt="Image du menu">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title">{{ resto.name }} </h5>
                        <p class="card-text">{{ resto.description }} </p>
                        <div class="col-md-11 text-right m-2">
                            <a href="" class="btn btn-warning">Commander</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
        </div>
        </div>
    </div>
    </div>

{% endblock %}
